<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.tufts.cs.blueberrycookbook.RecipeActivity"
    tools:showIn="@layout/activity_recipe">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="486dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="179dp"
                android:layout_height="110dp"
                android:layout_weight="0.66"
                android:text="Blueberry Pancakes" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pancakesrecipe" />

        </LinearLayout>

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recipeText"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="330dp" />

        <Button
            android:id="@+id/creditButton"
            android:layout_width="138dp"
            android:layout_height="44dp"
            android:onClick="viewSources"
            android:text="View Sources"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="380dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
